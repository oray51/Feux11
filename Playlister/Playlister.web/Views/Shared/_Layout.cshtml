<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Playlister - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
    <div class="stickyFooter">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a href="~/Home/Index">
                    <img src="~/Images/Playlister2.png" />
                    </a>
                    @*<p class="site-title">@Html.ActionLink("Playlister", "Index", "Home")</p>*@
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                <div class="center">
                    <nav>
                        <ul id="menu">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                           
                            <li>@Html.ActionLink("Music", "Music", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Help", "Help", "Home")</li>
                           
                          @*  <li>@Html.ActionLink("Log In", "Login", "Account")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div class="push"></div> <!-- needed for sticky footer -->
        </div> <!-- ends the sticky footer -->
        <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>
                        &copy; @DateTime.Now.Year - Playlister &nbsp &nbsp &nbsp Powered by
                        <a href="https://www.spotify.com/us/" title="Spotify">Spotify</a>       
                    </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    
    </body>
</html>
